<project>
    <source path="engines/openfl" />
    <haxelib name="openfl"/>
    <haxelib name="hxmaker" />
    <!-- Spine支持 -->
    <haxelib name="spine-haxe" unless="use_spine_hx" />
    <!-- HTML5 CPP 默认开始高清模式 -->
    <window allow-high-dpi="true" vsync="true" if="cpp || hl || html5" />
    <!-- 调试模式 -->
    <haxeflag name="--debug" if="debug" />
    <!-- 鸿蒙HAP目标（HTML5包装版本） -->
	<target name="hap-html5" handler="harmony-os-html5-hap" />
	<haxelib name="harmony-os-html5-hap" if="hap-html5"/>
</project>