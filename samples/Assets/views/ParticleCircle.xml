<Scene>
    <Quad width="100%" height="100%"/>
    <Image id="circle" src="assets/bg_white.png" scale="0.5" centerX="0" centerY="0" alpha="0.8" blendMode="add"/>
    <Particle id="boom" visible="true" src="assets/bg_white.png" centerX="0" centerY="0" alpha="0.5" scale="0.3">
        <particle-config auto="true" emitMode="1" createMode="1" minRadiusRange="1" maxRadiusRange="1" counts="15" life="0.5" duration="-1" widthRange="1" heightRange="1"  >
            <particle-velocity>
                <particle-one-attribute value="100"/>
                <particle-one-attribute value="0"/>
            </particle-velocity>
            <particle-group-scale-x>
                <particle-one-attribute value="0.8"/>
                <particle-one-attribute value="0.2"/>
            </particle-group-scale-x>
            <particle-group-scale-y>
                <particle-one-attribute value="0.8"/>
                <particle-one-attribute value="0.2"/>
            </particle-group-scale-y>
            <particle-tangential>
                <particle-one-attribute value="500"/>
                <particle-one-attribute value="0"/>
            </particle-tangential>
            <particle-group-color>
                <particle-four-attribute x="1" y="1" z="0.5" w="0"/>
                <particle-four-attribute x="1" y="1" z="0.5" w="1" weight="20"/>
                <particle-four-attribute x="1" y="1" z="0.5" w="1" weight="50"/>
                <particle-four-attribute x="1" y="1" z="0.5" w="0" weight="30"/>
            </particle-group-color>
        </particle-config>
    </Particle>
    <Particle id="boom" visible="true" src="assets/bg_white.png" centerX="0" centerY="0" alpha="1" scale="0.3">
        <particle-config dynamicEmitPoint="false" auto="true" emitMode="1" createMode="1" minRadiusRange="250" maxRadiusRange="250" radiusScaleX="0.8" radiusScaleY="0.8" counts="50" life="0.8" duration="-1" widthRange="1" heightRange="1"  >
            <particle-velocity>
                <particle-one-attribute value="0"/>
                <particle-one-attribute value="0"/>
            </particle-velocity>
            <!-- <particle-emit-rotation> -->
                <!-- <particle-random-two-attribute min="0" max="360"/> -->
            <!-- </particle-emit-rotation> -->
            <particle-group-scale-x>
                <particle-one-attribute value="0.1"/>
                <particle-one-attribute value="0.2"/>
            </particle-group-scale-x>
            <particle-group-scale-y>
                <particle-one-attribute value="0.1"/>
                <particle-one-attribute value="0.2"/>
            </particle-group-scale-y>
            <particle-tangential>
                <particle-one-attribute value="-250"/>
                <particle-one-attribute value="-250"/>
            </particle-tangential>
            <particle-group-color>
                <particle-four-attribute x="1" y="1" z="0.5" w="0"/>
                <particle-four-attribute x="1" y="1" z="0.5" w="1" weight="20"/>
                <particle-four-attribute x="1" y="1" z="0.5" w="1" weight="50"/>
                <particle-four-attribute x="1" y="1" z="0.5" w="0" weight="30"/>
            </particle-group-color>
        </particle-config>
    </Particle>
</Scene>